<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lift_name_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:padding="8dp"
        android:text="Lift Name:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/done_create"
        app:layout_constraintStart_toStartOf="@+id/weight_create"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:text="Weight:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lift_name_create" />

    <EditText
        android:id="@+id/weight_num_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/weight_create"
        app:layout_constraintStart_toEndOf="@+id/weight_create"
        app:layout_constraintTop_toTopOf="@+id/weight_create" />

    <TextView
        android:id="@+id/repatitions_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:text="Repatitions:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/weight_create"
        app:layout_constraintTop_toBottomOf="@+id/weight_create" />

    <EditText
        android:id="@+id/rep_num_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textShortMessage"
        app:layout_constraintBottom_toBottomOf="@+id/repatitions_create"
        app:layout_constraintEnd_toEndOf="@+id/weight_num_create"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/repatitions_create"
        app:layout_constraintTop_toTopOf="@+id/repatitions_create"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/done_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#64B5F6"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/lift_name_text_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lift_name_create"
        app:layout_constraintStart_toEndOf="@+id/lift_name_create"
        app:layout_constraintTop_toTopOf="@+id/lift_name_create" />

</androidx.constraintlayout.widget.ConstraintLayout>